# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'

group :app do
	gem 'haml'
	gem 'json'
	gem 'sass'
	gem 'compass'
	gem 'sprockets-helpers'
	gem 'sinatra-asset-pipeline'
end

group :rackup do
	gem 'rack'
	gem 'unicorn'
end

group :assets do
	gem 'sprockets'
	gem 'sprockets-sass'
	gem 'bootstrap-sass'
	gem 'handlebars_assets'
end

group :develop do
	gem 'html2haml', require: false
	gem 'shotgun', require: false
end

#gem 'coffee-script'

